<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TFE2017.Core.Pages"
             x:Class="TFE2017.Core.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label x:Name="LabelTitre" VerticalOptions="Center" HorizontalOptions="Center" />
            <Switch x:Name="IsDebugMode" IsToggled="False" Toggled="IsDebugModeToggled" HorizontalOptions="Center" VerticalOptions="Center"></Switch>

            <StackLayout x:Name="ContainerDebug" IsVisible="False" VerticalOptions="End">
                <Button x:Name="ButtonScanPage" Clicked="ButtonScanPageClicked" VerticalOptions="End" HorizontalOptions="CenterAndExpand" />
                <Button x:Name="ButtonPositionPage" Clicked="ButtonPositionPageClicked" VerticalOptions="End" HorizontalOptions="CenterAndExpand" />
                <Button x:Name="ButtonDBPage" Clicked="BoutonDBPageClicked" VerticalOptions="End" HorizontalOptions="CenterAndExpand" />
            </StackLayout>

            <Button x:Name="ButtonSuivant" Clicked="ButtonSuivantCicked" VerticalOptions="End" HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>